<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-uppercase" id="createMessengerForm">Añade tu servicio</h3>
                </div>
                <div class="card-body">
                    <form action="/addServ/{{mensajeroId}}" method="post" id="createMessengerForm" onsubmit="return showConfirmation()">
                        <!-- Mensaje de confirmación (inicialmente oculto) -->
                        <div id="confirmationMessage" class="mt-3" style="display: none;">
                            <div class="alert alert-success" role="alert">
                                ¡El mensajero se creó exitosamente! <a href="/list">Ir a ver.</a>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripcion</label>
                            <input type="text" class="form-control" id="descripcion" name="descripcion" required>
                        </div>
                        <div class="mb-3">
                            <label for="fecha" class="form-label">Fecha</label>
                            <input type="date" class="form-control" id="fecha" name="fecha" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success" type="submit">Añadir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>