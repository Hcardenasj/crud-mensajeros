<div class="container p-4">
    <div class="row mt-5">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-uppercase">Editar Mensajero</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{mensajero.id}}" method="post" id="EditMessengerForm"
                        onsubmit="return showConfirmation()">
                        <!-- Mensaje de confirmación (inicialmente oculto) -->
                        <div id="confirmationMessage" class="mt-3" style="display: none;">
                            <div class="alert alert-success" role="alert">
                                ¡El mensajero se actualizó exitosamente! <a href="/list">Ir a ver.</a>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre"
                                value="{{mensajero.nombre}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="identificacion" class="form-label">Identificación</label>
                            <input type="number" class="form-control" id="identificacion"
                                value="{{mensajero.identificacion}}" name="identificacion" required>
                        </div>
                        <div class="mb-3">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input type="number" class="form-control" id="telefono" value="{{mensajero.telefono}}"
                                name="telefono" required>
                        </div>
                        <div class="mb-3">
                            <label for="edad" class="form-label">Edad</label>
                            <input type="number" class="form-control" id="edad" value="{{mensajero.edad}}" name="edad"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="municipio" class="form-label">Municipio</label>
                            <input type="text" class="form-control" id="municipio" value="{{mensajero.municipio}}"
                                name="municipio" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-warning" type="submit">Actualizar</button>
                        </div>
                    </form>
                    <!-- Script para mostrar el mensaje de confirmación -->
                    <script>
                        function showConfirmation() {
                            // Muestra el mensaje de confirmación después de enviar el formulario
                            document.getElementById('confirmationMessage').style.display = 'block';
                            alert("El mensajero ha sido actualizado.");
                            // Puedes redirigir al usuario a otra página o realizar otras acciones según tus necesidades
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>