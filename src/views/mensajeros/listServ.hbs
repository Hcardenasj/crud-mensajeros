<div class="container">
    <div class="mt-5">
        <div mensajeros=""></div>
        {{#if servicios}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Fecha</th>
                    <th>Direccion Recogida</th>
                    <th>Direccion Entrega</th>
                    <th>Nombre del Cliente</th>
                    <th>Valor</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each servicios}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{fecha}}</td>
                    <td>{{dir_recog}}({{mun_recog}})</td>
                    <td>{{dir_entrega}}({{mun_entrega}})</td>
                    <td>{{nombre_cliente}}</td>
                    <td>{{valor}}</td>
                    <td>
                        <div class="btn-group">
                            <a href="/delete/{{mensajero_id}}/{{id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            <a href="/editServ/{{mensajero_id}}/{{id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="8">REGISTRO DE SERVICIOS</td>
                </tr>
            </tfoot>
        </table>
        {{else }}

        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Añade tu servicio</h3>
            </div>
            <div class="card-body">
                <p class="lead">Este mensajero aún no ha añadido el primer servicio, ve a añadirlo.</p>
                <a href="/list" class="btn btn-success"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>