<div class="container">
    <div class="mt-5">
        <div mensajeros=""></div>
        {{#if servicios}}

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                    <!-- Agrega más columnas según sea necesario -->
                </tr>
            </thead>
            <tbody>
                {{#each servicios}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{fecha}}</td>
                    <td>
                        <div class="btn-group">
                            <a href="/delete/{{id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            <a href="/edit/{{id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                        </div>
                    </td>
                    <!-- Agrega más columnas según sea necesario -->
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE SERVICIOS</td>
                </tr>
            </tfoot>
        </table>
        {{else }}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Añade tu servicio</h3>
            </div>
            <div class="card-body">
                <p>Este mensajero aún no ha añadido el primer servicio, ve a añadirlo.</p>
                <a href="/addServ/{{id}}" class="btn btn-primary">Ir a crear</a>
            </div>
            {{/if}}
        </div>
    </div>